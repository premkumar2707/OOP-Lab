import java.util.Scanner;

abstract class Shape {
    abstract double area();
    abstract double perimeter();
}

class Circle extends Shape {
    double r;
    Circle(double r) { this.r = r; }
    double area() { return Math.PI * r * r; }
    double perimeter() { return 2 * Math.PI * r; }
}

class Rectangle extends Shape {
    double l, b;
    Rectangle(double l, double b) { this.l = l; this.b = b; }
    double area() { return l * b; }
    double perimeter() { return 2 * (l + b); }
}

class Triangle extends Shape {
    double a, b, c, base, h;
    Triangle(double a, double b, double c, double base, double h) {
        this.a = a; this.b = b; this.c = c; this.base = base; this.h = h;
    }
    double area() { return 0.5 * base * h; }
    double perimeter() { return a + b + c; }
}

public class EngineeringShapes {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Choose: 1.Circle 2.Rectangle 3.Triangle");
        int ch = sc.nextInt();
        Shape s = null;

        if (ch == 1) {
            System.out.print("Radius: ");
            s = new Circle(sc.nextDouble());
        } else if (ch == 2) {
            System.out.print("Length & Breadth: ");
            s = new Rectangle(sc.nextDouble(), sc.nextDouble());
        } else if (ch == 3) {
            System.out.print("Base & Height: ");
            double base = sc.nextDouble(), h = sc.nextDouble();
            System.out.print("Sides a b c: ");
            s = new Triangle(sc.nextDouble(), sc.nextDouble(), sc.nextDouble(), base, h);
        }

        if (s != null) {
            System.out.println("Area: " + s.area());
            System.out.println("Perimeter: " + s.perimeter());
        }
        sc.close();
    }
}
